@model QuestionDetDelViewModel

<h4>Question</h4>
<hr/>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.CorrectChoice)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.CorrectChoice.Value)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.Title)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.Quiz)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.Quiz.Title)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.CreatedBy)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.CreatedBy)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.CreatedAt)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.CreatedAt)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.ChangedBy)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.ChangedBy)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.ChangedAt)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.ChangedAt)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.Choices)
    </dt>
    <br>
    @if (Model.Choice != null)
    {
        <table class="table">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.Question)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.TimesAnswered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.ChangedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Choice.ChangedAt)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Question.Choices)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimesAnswered)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangedAt)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</dl>