@model QuestionCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCorrectChoice">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question.CorrectChoice" class="control-label"></label>
                <select asp-for="Question.CorrectChoiceId" class="form-control" asp-items="Model.CorrectChoices">
                    <option selected="selected" value="">No selection</option>
                </select>
            </div>
            <input type="hidden" asp-for="Question.Description"/>
            <input type="hidden" asp-for="Question.Title"/>
            <input type="hidden" asp-for="Question.QuizId"/>
            <input type="hidden" asp-for="Question.Id"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.Question.Id">Back to Question</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}