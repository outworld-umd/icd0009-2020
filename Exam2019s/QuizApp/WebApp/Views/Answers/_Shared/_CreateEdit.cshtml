@model DAL.App.DTO.Answer

<div asp-validation-summary="All"class="text-danger"></div>
<div class="form-group">
    <label asp-for="ChoiceId" class="control-label"></label>
    <select asp-for="ChoiceId" class="form-control" asp-items="ViewBag.ChoiceId"></select>
</div>
<div class="form-group">
    <label asp-for="QuizSessionId" class="control-label"></label>
    <select asp-for="QuizSessionId" class="form-control" asp-items="ViewBag.QuizSessionIds"></select>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="IsCorrect"/> @Html.DisplayNameFor(model => model.IsCorrect)
    </label>
</div>