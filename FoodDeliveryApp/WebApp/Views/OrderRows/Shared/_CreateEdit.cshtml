@model WebApp.ViewModels.OrderRowCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="OrderRow.ItemId" class="control-label"></label>
    <select asp-for="OrderRow.ItemId" class="form-control" asp-items="Model.Items"></select>
</div>
<div class="form-group">
    <label asp-for="OrderRow.OrderId" class="control-label"></label>
    <select asp-for="OrderRow.OrderId" class="form-control" asp-items="Model.Orders"></select>
</div>
<div class="form-group">
    <label asp-for="OrderRow.Amount" class="control-label"></label>
    <input asp-for="OrderRow.Amount" class="form-control"/>
    <span asp-validation-for="OrderRow.Amount" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="OrderRow.Cost" class="control-label"></label>
    <input asp-for="OrderRow.Cost" class="form-control"/>
    <span asp-validation-for="OrderRow.Cost" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="OrderRow.Comment" class="control-label"></label>
    <input asp-for="OrderRow.Comment" class="form-control"/>
    <span asp-validation-for="OrderRow.Comment" class="text-danger"></span>
</div>