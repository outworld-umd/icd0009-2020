@model WebApp.ViewModels.UserManagerCreateViewModel

@{
    ViewData["Title"] = @Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Create;
}

<h1>@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Create</h1>

<h4>@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.User</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Role!.Name" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.Role</label>
                <select asp-for="Role!.Name" class="form-control" asp-items="Model.Roles"></select>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.Email</label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.FirstName</label>
                <input asp-for="User.FirstName" class="form-control"/>
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.LastName</label>
                <input asp-for="User.LastName" class="form-control"/>
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Phone" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.Phone</label>
                <input asp-for="User.Phone" class="form-control"/>
                <span asp-validation-for="User.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.Password</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">@Resources.Views.CreDelDetEdiInd.UserManager.ConfirmPassword</label>
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

