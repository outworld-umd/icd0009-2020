@model WebApp.ViewModels.UserManagerEditViewModel

@{
    ViewData["Title"] = @Resources.Views.Index.CreDelDetEdiInd.Edit;
}

<h1>@Resources.Views.Index.CreDelDetEdiInd.Edit</h1>

<h4>@Resources.Views.Index.CreDelDetEdiInd.User</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Role.Name" class="control-label">@Resources.Views.Index.UserManager.AddRole</label>
                <label>(@Resources.Views.Index.UserManager.CurrentRoles: @Html.DisplayFor(model => model.CurrentRoles))</label>
                <select asp-for="Role.Name" class="form-control" asp-items="Model.Roles"></select>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label">@Resources.Views.Index.UserManager.Email</label>
                <input asp-for="User.Email" class="form-control"/>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label">@Resources.Views.Index.UserManager.FirstName</label>
                <input asp-for="User.FirstName" class="form-control"/>
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label">@Resources.Views.Index.UserManager.LastName</label>
                <input asp-for="User.LastName" class="form-control"/>
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Phone" class="control-label">@Resources.Views.Index.UserManager.Phone</label>
                <input asp-for="User.Phone" class="form-control"/>
                <span asp-validation-for="User.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@Resources.Views.Index.CreDelDetEdiInd.Save class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Index.CreDelDetEdiInd.Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}