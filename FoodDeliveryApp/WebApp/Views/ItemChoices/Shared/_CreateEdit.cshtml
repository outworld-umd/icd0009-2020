@model WebApp.ViewModels.ItemChoiceCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="ItemChoice.Name" class="control-label"></label>
    <input asp-for="ItemChoice.Name" class="form-control"/>
    <span asp-validation-for="ItemChoice.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ItemChoice.AdditionalPrice" class="control-label"></label>
    <input asp-for="ItemChoice.AdditionalPrice" class="form-control"/>
    <span asp-validation-for="ItemChoice.AdditionalPrice" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ItemChoice.ItemOptionId" class="control-label"></label>
    <select asp-for="ItemChoice.ItemOptionId" class="form-control" asp-items="Model.ItemOptions"></select>
</div>