@model WebApp.ViewModels.ItemTypeCreateEditViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="ItemType.Name" class="control-label"></label>
    <input asp-for="ItemType.Name" class="form-control"/>
    <span asp-validation-for="ItemType.Name" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="ItemType.IsSpecial"/> @Html.DisplayNameFor(model => model.ItemType.IsSpecial)
    </label>
</div>
<div class="form-group">
    <label asp-for="ItemType.Description" class="control-label"></label>
    <input asp-for="ItemType.Description" class="form-control"/>
    <span asp-validation-for="ItemType.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ItemType.RestaurantId" class="control-label"></label>
    <select asp-for="ItemType.RestaurantId" class="form-control" asp-items="Model.Restaurants"></select>
</div>