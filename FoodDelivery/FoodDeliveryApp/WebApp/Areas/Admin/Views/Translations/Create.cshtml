@model WebApp.Areas.Admin.ViewModels.TranslationCreateEditViewModel

@{
    ViewData["Title"] = @Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Create;
}

<h1>@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Create</h1>

<h4>@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Translation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Translation.Culture" class="control-label"></label>
                    <input asp-for="Translation.Culture" class="form-control" />
                    <span asp-validation-for="Translation.Culture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Translation.Value" class="control-label"></label>
                    <input asp-for="Translation.Value" class="form-control" />
                    <span asp-validation-for="Translation.Value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Translation.LangStringId" class="control-label"></label>
                    <select asp-for="Translation.LangStringId" class ="form-control" asp-items="Model.LangStringIds"></select>
                </div>            
            <div class="form-group">
                <input type="submit" value="@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.CreDelDetEdiInd.CreDelDetEdiInd.Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
